{
  "name": "juststeveking/http-helpers",
  "description": "A collection of helpers to use when working with HTTP.",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "role": "Developer",
      "name": "Steve McDougall",
      "email": "juststevemcd@gmail.com",
      "homepage": "https://www.juststeveking.uk/"
    }
  ],
  "require": {
    "php": "^8.2",
    "illuminate/support": "^10.4.1",
    "juststeveking/parameterbag": "^2.0",
    "php-http/client-common": "^2.6",
    "php-http/discovery": "^1.15",
    "php-http/mock-client": "^1.5",
    "psr/http-client": "^1.0",
    "psr/http-factory": "^1.0",
    "thecodingmachine/safe": "^2.4"
  },
  "require-dev": {
    "pestphp/pest": "^1.22.6",
    "php-http/guzzle6-adapter": "^2.0",
    "phpstan/phpstan": "^1.10.7",
    "thecodingmachine/phpstan-safe-rule": "^1.2"
  },
  "autoload": {
    "psr-4": {
      "JustSteveKing\\HttpHelpers\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "JustSteveKing\\HttpHelpers\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "pint": [
      "./vendor/bin/pint"
    ],
    "stan": [
      "./vendor/bin/phpstan analyse"
    ],
    "test": [
      "./vendor/bin/pest"
    ]
  },
  "config": {
    "sort-packages": true,
    "optimize-autoloader": true,
    "allow-plugins": {
      "pestphp/pest-plugin": true,
      "php-http/discovery": true
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
